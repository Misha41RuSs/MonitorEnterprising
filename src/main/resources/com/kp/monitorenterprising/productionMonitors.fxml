<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="productionPane" prefHeight="561.0" prefWidth="784.0" stylesheets="@Styles/engineer.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.kp.monitorenterprising.Controller.ProductionMonitorsController">
    <children>
        <Label layoutX="252.0" layoutY="14.0" text="В процессе работы">
            <font><Font name="Times New Roman Bold" size="33" /></font>
        </Label>

        <TableView fx:id="monitorTable" layoutX="110.0" layoutY="83.0" prefHeight="280" prefWidth="572">
            <columns>
                <TableColumn fx:id="idColumn" prefWidth="80" text="ID заказа" />
                <TableColumn fx:id="modelColumn" prefWidth="200" text="Модель" />
                <TableColumn fx:id="quantityColumn" prefWidth="120" text="Кол-во" />
            </columns>
        </TableView>

        <!-- Существующая кнопка -->
        <Button fx:id="viewMapButton" layoutX="127.0" layoutY="457.0" onAction="#viewDescription" prefHeight="53.0" prefWidth="530.0" text="Посмотреть технологическую карту" />

        <!-- new: кнопка «Передать на тестирование» -->
        <Button fx:id="testButton" layoutX="131.0" layoutY="379.0" onAction="#sendToTesting" prefHeight="53.0" prefWidth="530.0" text="Передать на тестирование" />

        <Button fx:id="closeButton" layoutX="48.0" layoutY="14.0" onAction="#handleClose" prefHeight="30.0" prefWidth="70.0" text="Закрыть" />
    </children>
</AnchorPane>
