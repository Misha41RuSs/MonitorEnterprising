<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="documentationPane" prefHeight="519.0" prefWidth="840.0" stylesheets="@Styles/documentation.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.kp.monitorenterprising.Controller.DocumentationController">
    <children>
        <!-- Левая панель -->
        <Pane fx:id="leftPane" layoutX="0.0" layoutY="0.0" prefHeight="519.0" prefWidth="250.0">
            <children>
                <Label layoutX="25.0" layoutY="14.0" prefHeight="49.0" prefWidth="196.0" text="Документация">
                    <font>
                        <Font name="Times New Roman Bold" size="29.0" />
                    </font>
                </Label>
                <ImageView fx:id="docImage" fitHeight="102.0" fitWidth="98.0" layoutX="76.0" layoutY="115.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@Images/Signing A Document.png" />
                    </image>
                </ImageView>
                <Button fx:id="logoutButton" layoutX="1.0" layoutY="420.0" onAction="#handleLogout" prefHeight="53.0" prefWidth="250.0" text="Выйти">
                    <font>
                        <Font name="Times New Roman" size="29.0" />
                    </font>
                </Button>
            </children>
        </Pane>

        <!-- Основная часть окна -->
        <Label layoutX="403.0" layoutY="30.0" text="Документация">
            <font>
                <Font name="Times New Roman Bold" size="43.0" />
            </font>
        </Label>

        <Button fx:id="writeDocButton" layoutX="366.0" layoutY="188.0" prefHeight="53.0" prefWidth="379.0" text="Написать документацию">
            <font>
                <Font name="Times New Roman" size="29.0" />
            </font>
        </Button>

        <Button fx:id="sendToClientButton" layoutX="366.0" layoutY="317.0" prefHeight="53.0" prefWidth="379.0" text="Отправить клиенту">
            <font>
                <Font name="Times New Roman" size="29.0" />
            </font>
        </Button>
    </children>
</AnchorPane>
