<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<Pane xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.kp.monitorenterprising.Controller.OrderController"
      prefWidth="1019.0" prefHeight="519.0">
    <children>
        <Label layoutX="352.0" layoutY="18.0" text="Оформление заказа">
            <font>
                <Font name="Times New Roman Bold" size="36.0"/>
            </font>
        </Label>

        <TableView fx:id="monitorTable" layoutX="46.0" layoutY="80.0" prefHeight="300.0" prefWidth="920.0">
            <columns>
                <TableColumn fx:id="modelColumn" text="Модель" prefWidth="200.0">
                    <cellValueFactory>
                        <PropertyValueFactory property="modelName"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="sizeColumn" text="Размер" prefWidth="100.0">
                    <cellValueFactory>
                        <PropertyValueFactory property="screenSize"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="resolutionColumn" text="Разрешение" prefWidth="150.0">
                    <cellValueFactory>
                        <PropertyValueFactory property="resolution"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="refreshColumn" text="Гц" prefWidth="80.0">
                    <cellValueFactory>
                        <PropertyValueFactory property="refreshRate"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="priceColumn" text="Цена (₽)" prefWidth="100.0">
                    <cellValueFactory>
                        <PropertyValueFactory property="price"/>
                    </cellValueFactory>
                </TableColumn>
            </columns>
        </TableView>

        <Label layoutX="63.0" layoutY="400.0" text="Количество:">
            <font><Font name="Times New Roman" size="20.0"/></font>
        </Label>
        <TextField fx:id="quantityField" layoutX="170.0" layoutY="395.0" prefWidth="80.0"/>

        <Button layoutX="420.0" layoutY="450.0" text="Оформить заказ" onAction="#submitOrder" prefWidth="180.0" prefHeight="45.0">
            <font><Font name="Times New Roman" size="20.0"/></font>
        </Button>

        <Button layoutX="40.0" layoutY="450.0" text="Назад" onAction="#goBack" prefWidth="120.0" prefHeight="45.0">
            <font><Font name="Times New Roman" size="20.0"/></font>
        </Button>
    </children>
</Pane>
