<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="readyPane" prefHeight="500.0" prefWidth="826.0" stylesheets="@Styles/quality.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.kp.monitorenterprising.Controller.ReadyMonitorsController">
    <children>
        <Label layoutX="268.0" layoutY="14.0" text="Готовые мониторы">
            <font><Font name="Times New Roman Bold" size="33" /></font>
        </Label>

        <!-- Таблица заказов в статусе «Тестируется» -->
        <TableView fx:id="ordersTable" layoutX="110.0" layoutY="60.0" prefHeight="300" prefWidth="660">
            <columns>
                <TableColumn fx:id="orderIdColumn" prefWidth="100" text="ID заказа" />
                <TableColumn fx:id="modelColumn" prefWidth="300" text="Модель" />
                <TableColumn fx:id="quantityColumn" prefWidth="100" text="Кол-во" />
            </columns>
        </TableView>

        <!-- Замечание -->
        <Label layoutX="20" layoutY="380" text="Замечание:" />
        <TextField fx:id="remarkField" layoutX="120" layoutY="375" prefHeight="26.0" prefWidth="555.0" />

        <!-- Кнопки -->
        <Button fx:id="rejectButton" layoutX="120" layoutY="420" onAction="#rejectOrder" prefHeight="53.0" prefWidth="200.0" text="Отклонить" />
        <Button fx:id="acceptButton" layoutX="403.0" layoutY="420.0" onAction="#acceptOrder" prefHeight="40" prefWidth="200" text="Принять" />

        <!-- Назад -->
        <Button fx:id="backButton" layoutX="20" layoutY="14" onAction="#handleClose" prefHeight="30" prefWidth="70" text="Назад" />
    </children>
</AnchorPane>
