<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<Pane prefHeight="519.0" prefWidth="1019.0" xmlns="http://javafx.com/javafx/17.0.6" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.kp.monitorenterprising.Controller.RegisterController">
    <children>
        <Label layoutX="414.0" layoutY="21.0" text="Регистрация">
            <font>
                <Font name="Times New Roman Bold" size="42.0" />
            </font>
        </Label>

        <Label layoutX="169.0" layoutY="144.0" text="Имя пользователя:">
            <font>
                <Font name="Times New Roman" size="25.0" />
            </font>
        </Label>

        <Label layoutX="284.0" layoutY="214.0" text="Пароль:">
            <font>
                <Font name="Times New Roman" size="25.0" />
            </font>
        </Label>

        <Label layoutX="202.0" layoutY="284.0" text="Повтор пароля:">
            <font>
                <Font name="Times New Roman" size="25.0" />
            </font>
        </Label>

        <TextField fx:id="usernameField" layoutX="404.0" layoutY="136.0" prefWidth="300.0">
            <font>
                <Font name="Times New Roman" size="25.0" />
            </font>
        </TextField>

        <PasswordField fx:id="passwordField" layoutX="404.0" layoutY="206.0" prefWidth="300.0">
            <font>
                <Font name="Times New Roman" size="25.0" />
            </font>
        </PasswordField>

        <PasswordField fx:id="repeatPasswordField" layoutX="404.0" layoutY="276.0" prefWidth="300.0">
            <font>
                <Font name="Times New Roman" size="25.0" />
            </font>
        </PasswordField>

        <Button layoutX="398.0" layoutY="437.0" onAction="#handleRegister" text="Зарегистрироваться">
            <font>
                <Font name="Times New Roman" size="28.0" />
            </font>
        </Button>

        <Button layoutX="28.0" layoutY="435.0" onAction="#goBack" prefHeight="53.0" prefWidth="141.0" text="Назад">
            <font>
                <Font name="Times New Roman" size="29.0" />
            </font>
        </Button>
    </children>
</Pane>
